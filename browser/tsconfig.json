{
  "compilerOptions": {
      "strict": true,
      "module": "es2022",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "target": "es2022",
      "declaration": false,
      "noEmitOnError": true,
      "sourceMap": true,
      "jsx": "react",
      "outDir": "./dist",
      "allowJs": true,
      "paths": {},
      "baseUrl": "."
    },
    "include": [
        "./src/index.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}